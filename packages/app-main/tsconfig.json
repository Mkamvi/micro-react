{
  "include": [
    "./src/"
  ],
  "exclude": [
    "**/__test__/",
    "**/*.test.*",
  ],
  "compilerOptions": {
    "outDir": "lib",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
